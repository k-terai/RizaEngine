    <SolidColorBrush x:Key="DarkSurfaceColor02dpBrush" Color="#FF262626"/>
    <SolidColorBrush x:Key="DarkSurfaceColor03dpBrush" Color="#FF303030"/>
    <SolidColorBrush x:Key="DarkSurfaceColor04dpBrush" Color="#FF3A3A3A"/>
    <SolidColorBrush x:Key="DarkSurfaceColor06dpBrush" Color="#FF444444"/>
    <SolidColorBrush x:Key="DarkSurfaceColor08dpBrush" Color="#FF4E4E4E"/>
    <SolidColorBrush x:Key="DarkSurfaceColor12dpBrush" Color="#FF585858"/>
    <SolidColorBrush x:Key="DarkSurfaceColor16dpBrush" Color="#FF626262"/>
    <SolidColorBrush x:Key="DarkSurfaceColor24dpBrush" Color="#FF6C6C6C"/>

    <!--Accent Color-->
